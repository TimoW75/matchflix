<main class="pagina_login">

    <h1>Register</h1>
    <form action="/register" class="pe register" method="post">
        <label for="name">Name:</label><br>
        <input type="text" name="name" id="name"><br>
        <label for="age">Age:</label><br>
        <input type="number" name="age" id="age"><br>
        <label for="gender">Gender:</label><br>
        <section>
            <input type="radio" id="male" name="gender" value="Male">
            <label for="male" id="radio">Male</label><br>
        </section>
        <section>
            <input type="radio" id="female" name="gender" value="Female">
            <label for="female" id="radio">Female</label><br>
        </section>
        <label for="email">Email address:</label><br>
        <input type="email" id="email" name="email"><br>
        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password"><br>

        <label class="error"></label>

        <input type="submit" value="Register">
        <a href="/login">Login into your account!</a>
    </form>

</main>

<script src='javascript/progressive.js'></script>