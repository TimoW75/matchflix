<main class="pagina_update">

    <h2>Profiel bijwerken</h2>

    <form action="/update" method="post">
        <fieldset>
            <label for='name'>Name</label>
            <input type="text" id="name" name="name" value="{{name}}">
        </fieldset>
        <fieldset>
            <label for='age'>Age</label>
            <input type="number" id="age" name="age" value="{{age}}">
        </fieldset>
        <fieldset>
            <label for='gender'>Gender</label>
            <input type="text" id="gender" name="gender" value="{{gender}}">
        </fieldset>
        <fieldset>
            <label for='email'>E-mailadres</label>
            <input type="email" id="email" name="email" value="{{email}}">
        </fieldset>
        <fieldset>
            <label for='about'>About</label>
            <input type="text" id="about" name="about" value="{{about}}">
        </fieldset>
        <fieldset>
            <label for='shows'>Shows</label>
            <textarea rows="18" cols="40" value="{{shows}}">{{shows}}</textarea>
        </fieldset>

        <input type="submit" id='button' value="Gegevens bijwerken">
    </form>

</main>

