<main class="pagina_home">

    <h2>Hi {{name}}!</h2>

    <section class="gegevens">
        <p class="about">Info:</p>
        <p>{{name}}</p>
        <p>{{age}}</p>
        <p>{{gender}}</p>
        <p>{{email}}</p>
        <p><p class="about">About me:</p> <br> {{about}}</p>
    </section>

    <a class="manage" href="update">Manage profile</a>


    <h3>Your favorite shows:</h3>
    <section class="series-grid">
        {{#each shows}} {{! voor elke item in de shows database}}
        {{#each shows}}
        <section id="{{this}}"></section>
        {{/each}}
        {{/each}}
    </section>


    <a class="change" href="series">Change series</a>

    <form action="/logout" method="post">
        <input type="submit" value="Log out">
    </form>

</main>

{{>footer}}